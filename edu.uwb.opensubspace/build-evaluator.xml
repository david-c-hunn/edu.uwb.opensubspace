<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project edu.uwb.opensubspace">
    <target name="create_run_jar">
        <jar destfile="evaluator.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="weka.subspaceClusterer.Evaluator"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <zipfileset excludes="META-INF/*.SF" src="library/commons-math-1.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/commons-math3-3.1.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/i9-subspace.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/i9-weka.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/j3dcore.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/j3dutils.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/Jama.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/jsc.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/vecmath.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="library/weka.jar"/>
        </jar>
    </target>
</project>
